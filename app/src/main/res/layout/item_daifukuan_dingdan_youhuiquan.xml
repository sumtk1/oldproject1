<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zyd.wlwsdk.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_item_daifukuan_dingdan_youhuiquan"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="30px"
            android:background="@color/cl_white"
            android:paddingLeft="30px"
            android:paddingRight="30px">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30px"
                android:text="优惠券"
                android:textColor="@color/cl_666666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_item_dingdan_youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_more"
                android:layout_toRightOf="@+id/textView"
                android:gravity="right"
                android:hint="无可使用优惠券"
                android:text=""
                android:textColor="@color/cl_ff6d63"
                android:textColorHint="#c4c4c4"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_arrow_right" />
        </RelativeLayout>

    </com.zyd.wlwsdk.autolayout.AutoRelativeLayout>
</LinearLayout>