<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:paddingLeft="32px"
            android:paddingRight="32px">

            <TextView
                android:id="@+id/tv_02"
                style="@style/item_title"
                android:text="充值积分："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_point_recharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_02"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_color"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:paddingLeft="32px"
            android:paddingRight="32px">

            <TextView
                android:id="@+id/tv_03"
                style="@style/item_title"
                android:text="赠送积分："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_point_give"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_03"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/main_color"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:id="@+id/rl_paystyle_1"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_04"
                style="@style/item_title"
                android:text="支付方式："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_paystyle_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_04"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_paystyle_2"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:text="支付方式："
                android:textColor="#666666"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_paystyle_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="28px"
                android:layout_toRightOf="@+id/tv_05"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text="支付宝支付"
                android:textColor="#333333"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_paystyle_2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28px"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_05"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text="移动货币红利积分"
                android:textColor="#333333"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:paddingLeft="32px"
            android:paddingRight="32px">

            <TextView
                android:id="@+id/tv_06"
                style="@style/item_title"
                android:text="购买时间："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_purchase_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_06"
                android:ellipsize="end"
                android:gravity="right|center"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textColorHint="@color/color_bg_gray"
                android:textSize="32px" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>