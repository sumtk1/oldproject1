<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_bg_gray">

    <include layout="@layout/include_white_head" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toptitle_rl"
        android:layout_marginTop="30px"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="30px">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98px"
            android:background="@color/cl_white">

            <TextView
                android:id="@+id/tv_fahuoren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="收货人"
                android:textColor="#000"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_xiugai_shouhuo_dizhi_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40px"
                android:layout_toEndOf="@+id/tv_fahuoren"
                android:layout_toRightOf="@+id/tv_fahuoren"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入收货人名字"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="98px">

            <TextView
                android:id="@+id/tv_shoujihao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#000"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_xiugai_shouhuo_dizhi_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40px"
                android:layout_toEndOf="@+id/tv_shoujihao"
                android:layout_toRightOf="@+id/tv_shoujihao"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />

            <include layout="@layout/include_view_sheng" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="148px">

            <include layout="@layout/include_view_sheng" />

            <TextView
                android:id="@+id/tv_xiangxidizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px"
                android:text="详细地址"
                android:textColor="#000"
                android:textSize="32px" />

            <EditText
                android:id="@+id/et_xiugai_shouhuo_dizhi_dizhi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/tv_xiangxidizhi"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/tv_xiangxidizhi"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:hint="请填写详细地址"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
