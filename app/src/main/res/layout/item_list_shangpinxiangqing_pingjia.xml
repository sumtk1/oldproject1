<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="40px">

        <ImageView
            android:id="@+id/pinglun_img"
            android:layout_width="60px"
            android:layout_height="60px" />

        <TextView
            android:id="@+id/pinglun_title"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginLeft="16px"
            android:layout_toLeftOf="@+id/pinglun_time"
            android:layout_toRightOf="@+id/pinglun_img"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/pinglun_time"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/cl_999999"
            android:textSize="22px" />

        <TextView
            android:id="@+id/pinglun_neirong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pinglun_img"
            android:layout_marginTop="20px"
            android:text=""
            android:textColor="@color/cl_black"
            android:textSize="24px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pinglun_pingzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pinglun_img_01"
            android:layout_width="164px"
            android:layout_height="164px" />

        <ImageView
            android:id="@+id/pinglun_img_02"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginLeft="6px" />

        <ImageView
            android:id="@+id/pinglun_img_03"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginLeft="6px" />

        <ImageView
            android:id="@+id/pinglun_img_04"
            android:layout_width="164px"
            android:layout_height="164px"
            android:layout_marginLeft="6px" />
    </LinearLayout>
</LinearLayout>
