<?xml version="1.0" encoding="utf-8"?>
<com.zyd.wlwsdk.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_guide_close"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@mipmap/ic_guide_view_close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70px"
            android:layout_marginRight="30px"
            android:scaleType="fitXY"
            app:layout_auto_basewidth="height"
            app:layout_collapseMode="pin"/>

        <ImageView
            android:id="@+id/iv_guide_know"
            android:layout_width="224px"
            android:layout_height="112px"
            android:src="@mipmap/ic_guide_view_know"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="176px"
            android:scaleType="fitXY"
            app:layout_auto_basewidth="height"
            app:layout_collapseMode="pin"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_guide_view"
        android:layout_width="match_parent"
        android:layout_height="620px"
        android:layout_marginTop="240px"
        android:src="@mipmap/ic_guide_view01"
        android:scaleType="fitXY"
        app:layout_auto_basewidth="height"
        app:layout_collapseMode="pin"/>

</com.zyd.wlwsdk.autolayout.AutoRelativeLayout>
