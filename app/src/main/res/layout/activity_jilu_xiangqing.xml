                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/tv_zhangdan_xiangqing_3_1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zhangdan_xiangqing_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="支付方式"
                android:textColor="@color/cl_666666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/tv_zhangdan_xiangqing_4_1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zhangdan_xiangqing_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_5_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/tv_zhangdan_xiangqing_5_1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/cl_666666"
                android:textSize="30px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zhangdan_xiangqing_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_6_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="时间"
                android:textColor="@color/cl_666666"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_zhangdan_xiangqing_6_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
