<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />


    <LinearLayout
        android:id="@+id/ll_input_login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_titlebar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_login_01"
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="34px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_zhanghao" />

            <EditText
                android:id="@+id/et_login_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/iv_01"
                android:background="@null"
                android:hint="请输入账号"
                android:maxLines="1"
                android:textColor="#666666"
                android:textColorHint="#b4b4b4"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/iv_guangbi"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/ic_guangbi"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="34px"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_login_02"
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_mima" />

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/iv_02"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="#666666"
                android:textColorHint="#b4b4b4"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_biyan" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="17dp"
            android:background="#e0e0e0" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        style="@style/btn_system_style"
        android:layout_below="@id/ll_input_login1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="登录" />

    <TextView
        android:id="@+id/tv_register_overseas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20px"
        android:padding="30px"
        android:text="注册"
        android:textColor="@color/main_color"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_login_forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20px"
        android:padding="30px"
        android:text="忘记密码"
        android:textColor="@color/main_color"
        android:textSize="30px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="344px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="快速登录/注册"
                android:textColor="#666666"
                android:textSize="32px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/tv_other"
                android:layout_toStartOf="@+id/tv_other"
                android:background="#e0e0e0" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_other"
                android:background="#e0e0e0" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_below="@id/rl_title"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_num_login"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="30px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_shoujidenglu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22px"
                    android:layout_marginLeft="30px"
                    android:textColor="@color/cl_999999"
                    android:text="手机验证码登录"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginTop="10px"-->
                    <!--android:text="手机帐号登录"-->
                    <!--android:textColor="#999999"-->
                    <!--android:textSize="24px" />-->
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="100px"
                android:background="#e0e0e0"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wx_login"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_below="@+id/rl_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20px"
                    android:layout_marginRight="30px"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_wechat_login" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22px"
                    android:layout_marginRight="30px"
                    android:textColor="@color/cl_999999"
                    android:text="微信登录"/>

                <!--<TextView-->
                    <!--android:layout_width="360px"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginTop="10px"-->
                    <!--android:gravity="center"-->
                    <!--android:text="微信登录"-->
                    <!--android:textColor="#999999"-->
                    <!--android:textSize="24px" />-->
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_versionCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:text=""
            android:textColor="#999999"
            android:textSize="30px" />


    </RelativeLayout>
</RelativeLayout>

