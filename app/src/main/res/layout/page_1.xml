<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/im_page_01"
        android:layout_width="720px"
        android:layout_height="820px"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_page01" />
    <RelativeLayout
        android:id="@+id/rl_gape_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_page_01"
        android:layout_marginTop="60px"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_page_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="分润商城"
            android:textColor="@color/main_color"
            android:textSize="44px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_page_01"
            android:layout_marginTop="5px"
            android:text="分 享 赚 钱  使 用 省 钱"
            android:textColor="@color/page_text"
            android:textSize="30px" />
    </RelativeLayout>
</RelativeLayout>