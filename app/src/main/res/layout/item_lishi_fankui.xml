<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:background="@drawable/bg_radius"
        android:paddingBottom="40px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="40px">

        <TextView
            android:id="@+id/tv_item_lishi_fankui_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型：功能异常"
            android:textColor="@color/cl_333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_item_lishi_fankui_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_item_lishi_fankui_leixing"
            android:layout_marginLeft="26px"
            android:layout_toRightOf="@+id/tv_item_lishi_fankui_leixing"
            android:text="2017/12/1"
            android:textColor="@color/cl_999999"
            android:textSize="24px" />

        <TextView
            android:id="@+id/btn_item_lishi_fankui_zhuangtai"
            android:layout_width="94px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_bfbfbf_20px"
            android:gravity="center"
            android:text="已处理"
            android:textColor="@color/cl_white"
            android:textSize="22px" />

        <TextView
            android:id="@+id/tv_item_lishi_fankui_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_lishi_fankui_leixing"
            android:layout_marginTop="30px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="的很分散的几号放假可视电话放假看好烦接口是的画风的很分散的几号放假可视电话放假看好烦接口是的画风的很分散的几号放假可视电话放假看好烦接口是的画风"
            android:textColor="@color/cl_666666"
            android:textSize="28px" />


    </RelativeLayout>

</LinearLayout>
