<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178px"
        android:background="#f9f9f9">

        <RelativeLayout
            android:id="@+id/rl_item_dingdan_shangpin_tupian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_dingdan_shangpin_tupian"
                android:layout_width="150px"
                android:layout_height="150px"
                app:layout_auto_basewidth="height" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_dingdan_shangpin_xinxi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_item_dingdan_shangpin_tupian"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="14px">

            <FrameLayout
                android:id="@+id/fl_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_dingdan_shangpin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24px" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_item_dingdan_shangpin_zhongleixiangxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fl_01"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:maxWidth="300px"
                android:textColor="@color/cl_999999"
                android:textSize="24px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_dingdan_shangpin_youbian"
            android:layout_width="30px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_item_dingdan_shangpin_xinxi"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="30px"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_item_dingdan_shangpin_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:paddingTop="14px"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_item_dingdan_shangpin_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_item_dingdan_shangpin_danjia"
                android:paddingTop="14px"
                android:textColor="@color/cl_999999"
                android:textSize="24px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_item_dingdan_shangpin_zhuangtai"
            android:layout_width="83px"
            android:layout_height="83px"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>