<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shouhou_dingdan_xiangqing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloiot.hygo.ui.activity.my.shouhou.ShouHouDingDanXiangQingActivity">

    <include layout="@layout/include_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toptitle_rl"
        android:background="@color/cl_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_jianbian_hongse"
                android:paddingBottom="18px"
                android:paddingLeft="40px"
                android:paddingRight="30px"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_shouhou_dingdanxiangqing_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32px"
                    android:layout_marginTop="50px"
                    android:text="商家超时未处理"
                    android:textColor="@color/cl_white"
                    android:textSize="32px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_shouhou_dingdanxiangqing_zhuangtai"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btn_shouhou_dingdanxiangqing_01"
                        style="@style/btn_style_02"
                        android:layout_width="140px"
                        android:layout_height="56px"
                        android:layout_marginRight="20px"
                        android:textColor="@color/cl_white"
                        android:textSize="26px" />

                    <Button
                        android:id="@+id/btn_shouhou_dingdanxiangqing_02"
                        style="@style/btn_style_02"
                        android:layout_width="140px"
                        android:layout_height="56px"
                        android:layout_marginRight="20px"
                        android:textColor="@color/cl_white"
                        android:textSize="26px" />

                    <Button
                        android:id="@+id/btn_shouhou_dingdanxiangqing_03"
                        style="@style/btn_style_02"
                        android:layout_width="140px"
                        android:layout_height="56px"
                        android:textColor="@color/cl_white"
                        android:textSize="26px" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:background="@color/cl_white"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:id="@+id/iv_shouhou_dingdanxiangqing_1"
                    android:layout_width="24px"
                    android:layout_height="34px"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/shouhuodizhi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26px"
                    android:layout_toRightOf="@+id/iv_shouhou_dingdanxiangqing_1"
                    android:text="收货地址"
                    android:textColor="@color/cl_666666"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/iv_shouhou_dingdanxiangqing_1"
                    android:layout_marginTop="18px"
                    android:background="@color/cl_background" />

                <TextView
                    android:id="@+id/tv_shouhou_dingdanxiangqing_shoujianren_xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_shouhou_dingdanxiangqing_1"
                    android:layout_marginLeft="76px"
                    android:layout_marginTop="40px"
                    android:text="收件人"
                    android:textColor="@color/cl_333333"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_shouhou_dingdanxiangqing_shoujianren_dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_shouhou_dingdanxiangqing_shoujianren_xingming"
                    android:layout_below="@+id/iv_shouhou_dingdanxiangqing_1"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/tv_shouhou_dingdanxiangqing_shoujianren_xingming"
                    android:text="13631268888"
                    android:textColor="@color/cl_333333"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_shouhou_dingdanxiangqing_shoujianren_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_shouhou_dingdanxiangqing_shoujianren_xingming"
                    android:layout_marginLeft="76px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="深圳市罗湖区南湖街道庐山酒店17楼深圳市罗湖区南湖街道庐山酒店17楼"
                    android:textColor="@color/cl_666666"
                    android:textSize="26px" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:background="@color/cl_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/shangpin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18px"
                        android:layout_marginRight="30px"
                        android:text="商品信息"
                        android:textColor="@color/cl_666666"
                        android:textSize="28px" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="204px"
                    android:layout_marginTop="2px"
                    android:background="@color/cl_white">

                    <ImageView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_shangpin_img"
                        android:layout_width="140px"
                        android:layout_height="140px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="20px"
                        android:background="@color/cl_999999" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_shangpin_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="32px"
                        android:layout_toRightOf="@+id/tv_shouhou_dingdanxiangqing_shangpin_img"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="的艰苦奋斗设计开发客家话时代峰峻可视电话接口都是飞机客户"
                        android:textColor="@color/cl_333333"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_shangpin_guige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_shouhou_dingdanxiangqing_shangpin_title"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="10px"
                        android:layout_toLeftOf="@+id/tv_shouhou_dingdanxiangqing_shangpin_shuliang"
                        android:layout_toRightOf="@+id/tv_shouhou_dingdanxiangqing_shangpin_img"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="颜色分类：白色"
                        android:textColor="@color/cl_666666"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_shangpin_shuliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_shouhou_dingdanxiangqing_shangpin_title"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="×1"
                        android:textColor="@color/cl_666666"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_shangpin_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_shouhou_dingdanxiangqing_shangpin_guige"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="30px"
                        android:layout_toRightOf="@+id/tv_shouhou_dingdanxiangqing_shangpin_img"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="¥100"
                        android:textColor="@color/cl_333333"
                        android:textSize="26px" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shouhou_dingdanxiangqing_shenqingshouhou"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="1px"
                android:background="@color/cl_white"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_shouhou_dingdanxiangqing_shenqingshouhou"
                    style="@style/btn_style_01"
                    android:layout_width="140px"
                    android:layout_height="54px"
                    android:text="申请售后"
                    android:textColor="@color/cl_666666"
                    android:textSize="26px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/cl_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="运费"
                        android:textColor="@color/cl_666666"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_yunfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30px"
                        android:text="¥10.00"
                        android:textColor="@color/cl_333333"
                        android:textSize="28px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:background="@color/cl_background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_marginTop="1px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="合计"
                        android:textColor="@color/cl_666666"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_heji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30px"
                        android:text="¥10.00"
                        android:textColor="@color/cl_ff436f"
                        android:textSize="28px" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shouhou_dingdanxiangqing_bianhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/cl_white"
                android:orientation="vertical"
                android:paddingBottom="20px"
                android:paddingLeft="30px"
                android:paddingTop="20px">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="订单编号:"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_bianhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toLeftOf="@+id/tv_dingdan_xiangqing_fuzhi"
                        android:layout_toRightOf="@+id/textView"
                        android:text=""
                        android:textSize="24px" />

                    <Button
                        android:id="@+id/btn_shouhou_dingdanxiangqing_fuzhi"
                        style="@style/btn_style_01"
                        android:layout_width="120px"
                        android:layout_height="40px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:gravity="center"
                        android:text="复制"
                        android:textColor="@color/cl_666666"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式:"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_zhifufangshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        android:text=""
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创建时间:"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_chuangjianshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView3"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/textView3"
                        android:layout_toRightOf="@+id/textView3"
                        android:text=""
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款时间:"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_shouhou_dingdanxiangqing_fukuanshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView4"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/textView4"
                        android:layout_toRightOf="@+id/textView4"
                        android:text=""
                        android:textSize="24px" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
