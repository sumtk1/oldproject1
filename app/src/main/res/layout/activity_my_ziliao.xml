<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/in_titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_mydata_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_mydata_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="头像"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/img_mydata_tx"
                        android:layout_width="96px"
                        android:layout_height="96px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50px"
                        android:src="@mipmap/ic_head"
                        app:layout_auto_baseheight="width" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_zhanghao"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="帐号"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_zhanghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30px"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="30px" />
                   

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_nicheng"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="昵称"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right" />

                    <TextView
                        android:id="@+id/tv_mydata_nicheng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="30px"
                        android:layout_toLeftOf="@id/iv_03"
                        android:layout_toRightOf="@id/tv_02"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入昵称"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="30px" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_xingbie"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="性别"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right" />

                    <TextView
                        android:id="@+id/tv_mydata_xingbie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:layout_toLeftOf="@id/iv_04"
                        android:gravity="right"
                        android:hint="请选择性别"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="30px" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_shengri"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="生日"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right" />

                    <TextView
                        android:id="@+id/tv_mydata_shengri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:layout_toLeftOf="@id/iv_05"
                        android:gravity="right"
                        android:hint="请设置生日"
                        android:textColor="#000000"
                        android:textSize="30px" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_shoujihao"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="手机号"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_mydata_shoujihao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:hint=""
                        android:textColor="#000000"
                        android:textSize="30px" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mydata_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_mydata_erweima"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_rzzt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="我的二维码"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right" />

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:layout_toLeftOf="@id/iv_07"
                        android:src="@mipmap/ic_erweim"
                        app:layout_auto_baseheight="width" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:background="@drawable/bt_rl"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_rz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="实名认证"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right" />

                    <TextView
                        android:id="@+id/tv_mydata_renzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:layout_toLeftOf="@id/iv_08"
                        android:text=""
                        android:textSize="28px" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mydata_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_mydata_weizhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_rl"
                    android:minHeight="96px"
                    android:padding="10px"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_item_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="位置"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:src="@mipmap/ic_arrow_right_white" />

                    <TextView
                        android:id="@+id/tv_mydata_weizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="10px"
                        android:layout_toLeftOf="@id/iv_09"
                        android:layout_toRightOf="@id/tv_item_location"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请设置位置"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="30px" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/color_bg_gray" />

                <RelativeLayout
                    android:id="@+id/rl_mydata_qianming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_rl"
                    android:minHeight="96px"
                    android:padding="10px">

                    <TextView
                        android:id="@+id/tv_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:text="个性签名"
                        android:textColor="#666666"
                        android:textSize="28px" />

                    <ImageView
                        android:id="@+id/iv_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:background="@mipmap/ic_arrow_right" />

                    <TextView
                        android:id="@+id/tv_mydata_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="10px"
                        android:layout_toLeftOf="@id/iv_10"
                        android:layout_toRightOf="@+id/tv_11"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="好的个性签名能带来意想不到的收获"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="30px" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
