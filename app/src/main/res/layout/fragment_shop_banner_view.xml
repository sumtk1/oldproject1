<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_background">

    <com.youth.banner.Banner
        android:id="@+id/fragment_shop_banner"
        android:layout_width="720px"
        android:layout_height="320px"
        android:visibility="visible"
        app:delay_time="4000"
        app:image_scale_type="fit_xy"
        app:indicator_drawable_selected="@mipmap/ic_yuan_dian"
        app:indicator_drawable_unselected="@mipmap/ic_yuan_weidian"
        app:indicator_height="18px"
        app:indicator_margin="15px"
        app:indicator_width="18px"
        app:layout_auto_basewidth="height"
        app:layout_collapseMode="pin"/>

</RelativeLayout>
