<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_buy_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />

    <Button
        android:id="@+id/btn_jifenchongzhi_recharge"
        style="@style/btn_system_style"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="提交订单" />

    <LinearLayout
        android:id="@+id/rl_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/in_titlebar"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rl_jifen"
            android:layout_width="match_parent"
            android:layout_height="96px">

            <TextView
                android:id="@+id/tv_ch01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="积分充值"
                android:textColor="#666666"
                android:textSize="28px" />

            <EditText
                android:id="@+id/et_jifenchongzhi_jifen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginTop="34px"
                android:layout_marginRight="30px"
                android:hint="请输入要充值的积分"
                android:gravity="right"
                android:inputType="number"
                android:textColor="#000000"
                android:text=""
                android:maxLength="15"
                android:textCursorDrawable="@null"
                android:textColorHint="#999999"
                android:textSize="28px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送积分(充值时赠送的积分)"
                android:textColor="#666666"
                android:textSize="28px"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/gift_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/cl_2b9ced"
                android:paddingRight="5dp"
                android:text="0"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/gift_points_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginTop="10px"
                android:textColor="#666666"
                android:text="注："
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
