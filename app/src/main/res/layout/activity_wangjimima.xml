<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/in_titlebar">

        <LinearLayout
            android:id="@+id/ll_creatGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_forgetpwd_area"
                android:layout_width="match_parent"
                android:layout_height="96px">

                <ImageView
                    android:id="@+id/iv_01"
                    android:layout_width="30px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_address" />

                <TextView
                    android:id="@+id/tv_forgetpwd_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/iv_01"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="中国"
                    android:textColor="@color/cl_333333"
                    android:textColorHint="@color/b4b4b4"
                    android:textSize="28px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/ic_arrow_right_white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shezhimima"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/tv_05"
                    android:layout_width="28px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_shouji" />


                <TextView
                    android:id="@+id/tv_mimazhanghao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/tv_05"
                    android:gravity="center_vertical"
                    android:textColor="@color/cl_333333"
                    android:textSize="30px" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_forgetpwd_01"
                android:layout_width="match_parent"
                android:layout_height="96px">

                <ImageView
                    android:id="@+id/tv_01"
                    android:layout_width="28px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_shouji" />


                <TextView
                    android:id="@+id/tv_overseas_quhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/tv_01"
                    android:layout_toRightOf="@+id/tv_01"
                    android:gravity="center_vertical"
                    android:text="+86"
                    android:textColor="@color/cl_333333"
                    android:textSize="28px"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/et_forgetPwd_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/tv_overseas_quhao"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/cl_333333"
                    android:textColorHint="@color/b4b4b4"
                    android:textSize="28px" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_02"
                android:layout_width="match_parent"
                android:layout_height="96px">


                <ImageView
                    android:id="@+id/tv_02"
                    android:layout_width="32px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_yanzhegnma" />

                <EditText
                    android:id="@+id/et_forgetpwd_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toLeftOf="@+id/tv_forgetpwd_yzm"
                    android:layout_toRightOf="@+id/tv_02"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:maxLines="1"
                    android:textColor="@color/cl_333333"
                    android:textColorHint="@color/b4b4b4"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_forgetpwd_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/main_color"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px">


                <ImageView
                    android:id="@+id/tv_03"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_mima" />

                <EditText
                    android:id="@+id/et_forgetpwd_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/tv_03"
                    android:background="@null"
                    android:hint="字母大小写与数字相结合"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColorHint="@color/b4b4b4"
                    android:textColor="@color/cl_333333"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96px">

                <ImageView
                    android:id="@+id/tv_04"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@mipmap/ic_mima" />

                <EditText
                    android:id="@+id/et_forgetpwd_confirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/tv_04"
                    android:background="@null"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColorHint="@color/b4b4b4"
                    android:textColor="@color/cl_333333"
                    android:textSize="28px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="34px"
                    android:background="@color/color_bg_gray" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bnt_confirm"
            style="@style/btn_system_style"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="确 定" />

    </RelativeLayout>


</RelativeLayout>

