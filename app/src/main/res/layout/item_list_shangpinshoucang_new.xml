<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/cl_white"
    android:paddingLeft="30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_item_shoucang_dagou"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_item_shoucang_dagou"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="center"
                android:src="@mipmap/ic_xuanzhong_no" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_item_shoucang_tupian"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_item_dagou"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_shoucang_tupian"
                android:layout_width="204px"
                android:layout_height="204px"
                app:layout_auto_basewidth="height"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_shoucang_youbian"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_shangpinshoucang_touxiang"
            android:layout_weight="6">

            <RelativeLayout
                android:id="@+id/rl_item_shoucang_xingxi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="32px"
                android:paddingTop="32px">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_shoucang_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingRight="30px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="26px" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_item_shoucang_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    android:textColor="#FF436F"
                    android:textSize="32px" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_item_shoucang_zhuantai"
                android:layout_width="140px"
                android:layout_height="140px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_marginBottom="20px"
                android:visibility="visible"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>