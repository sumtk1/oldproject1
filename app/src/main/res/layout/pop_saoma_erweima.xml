<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="500px"
        android:layout_height="560px"
        android:background="@drawable/bg_saoma_white"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_saoma_erweima"
            android:layout_width="300px"
            android:layout_height="302px"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_zhifu_erweima"
            android:layout_marginTop="89px"/>

        <TextView
            android:id="@+id/tv_saoma_baocun"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:text="保存二维码到相册"
            android:textSize="24px"
            android:textColor="@color/cl_white"
            android:gravity="center"
            android:background="@drawable/bg_btn_purple"/>
    </RelativeLayout>


</LinearLayout>