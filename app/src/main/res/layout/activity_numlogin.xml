<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_white">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />


    <LinearLayout
        android:id="@+id/ll_input_login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_titlebar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="30px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_address" />

            <TextView
                android:id="@+id/tv_overseas_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/iv_01"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="中国"
                android:textColor="@color/cl_333333"
                android:textSize="28px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@mipmap/ic_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="34px"
                android:background="@color/color_bg_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/iv_02"
                android:layout_width="28px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_shouji" />

            <TextView
                android:id="@+id/tv_overseas_quhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/iv_02"
                android:layout_toRightOf="@+id/iv_02"
                android:gravity="center_vertical"
                android:text="+86"
                android:textColor="@color/cl_333333"
                android:textSize="28px" />

            <EditText
                android:id="@+id/et_login_overseas_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/tv_overseas_quhao"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/b4b4b4"
                android:textSize="28px" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="34px"
                android:background="@color/color_bg_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px">

            <ImageView
                android:id="@+id/iv_03"
                android:layout_width="32px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/ic_yanzhegnma" />

            <EditText
                android:id="@+id/et_login_overseas_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_toLeftOf="@+id/tv_login_overseas_code"
                android:layout_toRightOf="@+id/iv_03"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:textColor="@color/cl_333333"
                android:textColorHint="@color/b4b4b4"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_login_overseas_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="30px"
                android:text="获取验证码"
                android:textColor="@color/main_color"
                android:textSize="28px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="34px"
                android:background="@color/color_bg_gray" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/btn_system_style"
        android:layout_below="@id/ll_input_login1"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:text="登录" />
</RelativeLayout>
