<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/rl_saoma_activity">

    <include layout="@layout/include_titlebar"/>

    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toptitle_rl"
        android:background="@drawable/bg_saoma_white"
        android:orientation="vertical"
        android:layout_marginTop="60px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">


        <ImageView
            android:id="@+id/iv_saoma_erweima"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="60px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_zhifu_erweima"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="权球物联网电商平台管理(深圳)有限公司"
            android:textSize="24px"
            android:textColor="@color/cl_999999"
            android:layout_marginTop="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="支付宝扫一扫二维码，向我付款"
            android:textSize="34px"
            android:textColor="@color/cl_333"
            android:layout_marginTop="50px"
            android:layout_marginBottom="60px"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66px"
        android:layout_below="@+id/ll_01"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_saoma_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_saoma_dingdanhao"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:hint="请输入支付宝订单号:"
            android:textColorHint="@color/cl_999999"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:background="@null"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/tv_saoma_tijiao"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:text="提交"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="@color/cl_white"
            android:background="@drawable/bg_btn_purple"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_saoma_chongzhijilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值记录"
            android:textColor="@color/cl_666666"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="26px"
            android:textSize="28px"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#e0e0e0"/>

        <TextView
            android:id="@+id/tv_saoma_caozoushuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作说明"
            android:textColor="@color/cl_666666"
            android:layout_weight="1"
            android:textSize="28px"
            android:layout_marginLeft="26px"/>
    </LinearLayout>

</RelativeLayout>