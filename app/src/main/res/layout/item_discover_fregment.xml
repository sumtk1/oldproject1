<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_discover_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:background="@color/cl_white"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/tv_item_discover_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="34px" />

        <RelativeLayout
            android:id="@+id/rl_item_discover_fragment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_discover_fragment_content_1"
                android:layout_width="match_parent"
                android:layout_height="340px"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_item_discover_fragment_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_item_discover_fragment_content_2_1"
                    android:layout_width="218px"
                    android:layout_height="218px"/>

                <ImageView
                    android:id="@+id/iv_item_discover_fragment_content_2_2"
                    android:layout_width="218px"
                    android:layout_height="218px"
                    android:layout_marginLeft="16px"/>

                <ImageView
                    android:id="@+id/iv_item_discover_fragment_content_2_3"
                    android:layout_width="218px"
                    android:layout_height="218px"
                    android:layout_marginLeft="16px"/>

            </LinearLayout>

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/jcvp_item_discover_fragment_content_3"
                android:layout_width="match_parent"
                android:layout_height="340px"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_discover_fragment_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/cl_999999"
                android:textSize="22px" />

            <LinearLayout
                android:id="@+id/ll_item_discover_fragment_dianzan"
                style="@style/btn_style_01"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <ImageView
                    android:id="@+id/iv_item_discover_fragment_dianzan"
                    android:layout_width="30px"
                    android:layout_height="28px"
                    android:layout_marginRight="15px"
                    android:src="@mipmap/ic_dianzan" />

                <TextView
                    android:id="@+id/tv_item_discover_fragment_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/cl_666666"
                    android:textSize="24px" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
