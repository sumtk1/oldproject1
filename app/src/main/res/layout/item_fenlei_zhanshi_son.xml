<?xml version="1.0" encoding="utf-8"?>
<com.zyd.wlwsdk.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_fenlei_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_fenlei_tu"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_fenlei_loading"/>

        <TextView
            android:id="@+id/tv_fenlei_zhanshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_fenlei_tu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:text=""
            android:textColor="#333"
            android:textSize="24px" />
    </RelativeLayout>

</com.zyd.wlwsdk.autolayout.AutoLinearLayout>