<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shouhou_fankui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gloiot.hygo.ui.activity.my.shouhou.ShouHouFanKuiActivity">

    <include layout="@layout/include_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toptitle_rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:background="@color/cl_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="28px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="28px">

                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@mipmap/ic_shouhou_gantanhao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="商家超时未处理已自动关闭"
                    android:textColor="@color/cl_333333"
                    android:textSize="28px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142px"
                android:layout_marginBottom="24px"
                android:background="@color/cl_white"
                android:paddingBottom="16px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="20px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="·商家三天内未处理您的退货退款申请，退货退款申请现已关闭"
                    android:textColor="@color/cl_666666"
                    android:textSize="24px" />

                <Button
                    android:id="@+id/btn_shouhou_fankui_kefujieru"
                    style="@style/btn_style_01"
                    android:layout_width="140px"
                    android:layout_height="56px"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/btn_shouhou_fankui_zaicishenqing"
                    android:text="客服介入"
                    android:textColor="@color/cl_666666"
                    android:textSize="26px" />

                <Button
                    android:id="@+id/btn_shouhou_fankui_zaicishenqing"
                    style="@style/btn_style_03"
                    android:layout_width="140px"
                    android:layout_height="56px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20px"
                    android:text="再次申请"
                    android:textColor="@color/cl_ff436f"
                    android:textSize="26px" />


            </RelativeLayout>

            <include layout="@layout/layout_tuikuankuohuo_dingdan_xinxi" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
