<?xml version="1.0" encoding="utf-8"?>
<com.zyd.wlwsdk.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cl_white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="28px">

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cb_check"
            android:layout_alignBottom="@+id/cb_check"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:layout_toEndOf="@+id/cb_check"
            android:layout_toRightOf="@+id/cb_check"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="店名"
            android:textColor="#000"
            android:textSize="28px" />

        <CheckBox

            android:id="@+id/cb_check"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_centerVertical="true"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_gouwuche_rb"
            app:layout_auto_basewidth="height"
            android:button="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f6f6f6">

    </RelativeLayout>


</com.zyd.wlwsdk.autolayout.AutoRelativeLayout>