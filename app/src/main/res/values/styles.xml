<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="listDivider_toumingTheme" parent="AppTheme">
        <item name="android:listDivider">@drawable/divider_touming</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Activity跳转动画-->
    <style name="Animation_Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_rightin</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_leftout</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_leftin</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_rightout</item>
    </style>

    <!-- LoginActivity主题 -->
    <style name="activityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>


    <!-- 默认APP所有按钮（大部分90%）的样式，以后更改样式直接在里头改-->
    <!--圆角-->
    <style name="btn_system_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/bg_btn_fillet_violet</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30px</item>

    </style>
    <!--直角-->
    <style name="btn_system_style_rect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/bg_btn_fillet_violet_rect</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30px</item>

    </style>

    <!-- 原来的蓝色样式：<item name="android:background">@drawable/bg_btn_blue</item> -->
    <!--  新的紫色样式：<item name="android:background">@drawable/bg_btn_fillet_violet</item> -->

    <!-- 灰色描边按钮样式,只有点击效果，具体的控件宽高，字体颜色大小自行设置 -->
    <style name="btn_style_01">
        <item name="android:background">@drawable/btn_style_01</item>
    </style>
    <!-- 白色描边按钮样式,只有点击效果，具体的控件宽高，字体颜色大小自行设置 -->
    <style name="btn_style_02">
        <item name="android:background">@drawable/btn_style_02</item>
    </style>
    <!-- 红色描边按钮样式,只有点击效果，具体的控件宽高，字体颜色大小自行设置 -->
    <style name="btn_style_03">
        <item name="android:background">@drawable/btn_style_03</item>
    </style>
    <!-- 紫色色描边按钮样式,只有点击效果，具体的控件宽高，字体颜色大小自行设置 -->
    <style name="btn_style_04">
        <item name="android:background">@drawable/btn_style_04</item>
    </style>
    <!-- 紫色色描边按钮样式,只有点击效果，具体的控件宽高，字体颜色大小自行设置    圆角-->
    <style name="btn_style_05">
        <item name="android:background">@drawable/btn_style_05</item>
    </style>

    <!--item背景-->
    <style name="item_bg_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">97px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">30px</item>
    </style>

    <!--item标题-->
    <style name="item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32px</item>
    </style>

    <!--item输入-->
    <style name="item_input_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">15px</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_bg_gray</item>
        <item name="android:textSize">32px</item>
    </style>

    <!--item分割线-->
    <style name="item_view_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_bg_gray</item>
        <item name="android:layout_marginLeft">40px</item>
    </style>

    <!--蓝色的提交按钮,无圆角-->
    <style name="btn_commit_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_marginLeft">32px</item>
        <item name="android:layout_marginRight">32px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
        <item name="android:background">@drawable/bg_btn_violet_square</item>
    </style>

    <!--标题分割线-->
    <style name="title_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#BFBFBF</item>
    </style>
    <!--商品详情弹出动画-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--TabLayout 字体大小-->
    <style name="TabLayoutTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">1000px</item>
        <!--<item name="android:textAllCaps">false</item>-->
    </style>

    <!-- 视频播放器透明主题-->
    <style name="myTransparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

</resources>
