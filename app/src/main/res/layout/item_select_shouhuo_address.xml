<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="2px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_shouhuo_address"
        android:layout_width="720px"
        android:layout_height="202px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_btn_white_0"
        android:paddingLeft="30px">

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:layout_toLeftOf="@+id/item_bianji_shouhuodizhi"
            android:layout_toRightOf="@id/tv_name"
            android:text=""
            android:textColor="@color/cl_666666"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:layout_marginTop="32px"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="300px"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="32px" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="30px"
            android:layout_toLeftOf="@+id/item_bianji_shouhuodizhi"
            android:ellipsize="end"
            android:lineSpacingExtra="10px"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="28px" />

        <LinearLayout
            android:id="@+id/item_bianji_shouhuodizhi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <ImageView
                android:layout_width="30px"
                android:layout_height="32px"
                android:src="@mipmap/ic_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14px"
                android:text="编辑"
                android:textColor="@color/cl_333333"
                android:textSize="28px" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>