<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="720px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/cl_white"
        android:orientation="vertical">

        <include
            android:id="@+id/include8"
            layout="@layout/include_view_sheng" />

        <LinearLayout
            android:layout_width="720px"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_auto_basewidth="height">

            <ImageView
                android:id="@+id/iv_item_shopcart_suolvtu"
                android:layout_width="140px"
                android:layout_height="140px"
                app:layout_auto_basewidth="height" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20px">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="29px">

                    <TextView
                        android:id="@+id/tv_item_shopcart_name"
                        android:layout_width="wrap_content"
                        android:layout_height="58px"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="24px" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_item_shopcart_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:textColor="#666"
                    android:textSize="24px"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/tv_item_shopcart_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="22px"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_item_shopcart_shuliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_item_shopcart_price"
                        android:textColor="@color/cl_999999"
                        android:textSize="24px" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>