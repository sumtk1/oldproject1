<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloiot.hygo.ui.activity.shopping.wodedingdan.WodeDingdanActivity">

    <include
        android:id="@+id/include8"
        layout="@layout/include_titlebar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_dingdan_gunli_head"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include8"
        android:background="@color/cl_white"
        app:tabIndicatorColor="@color/cl_2b9ced"
        app:tabIndicatorHeight="4px"
        app:tabSelectedTextColor="@color/cl_2b9ced"
        app:tabTextAppearance="@style/TabLayoutTextSize"
        app:tabTextColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/vp_dingdan_gunli_page"
        android:background="@color/view_sheng" />


    <com.zyd.wlwsdk.widge.NoScrollViewPager
        android:id="@+id/vp_dingdan_gunli_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_dingdan_gunli_head" />

</RelativeLayout>
