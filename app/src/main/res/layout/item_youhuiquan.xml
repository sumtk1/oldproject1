<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="30px">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="210px"
            android:background="@mipmap/juan_1"
            android:paddingLeft="24px">

            <RelativeLayout
                android:layout_width="244px"
                android:layout_height="match_parent"
                android:layout_marginLeft="16px"
                android:layout_marginTop="38px">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="优惠券"
                    android:textColor="#fbfbfb"
                    android:textSize="50px" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="32px"
                    android:gravity="center_horizontal"
                    android:text="¥ "
                    android:textColor="#fbfbfb"
                    android:textSize="40px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="436px"
                android:layout_height="match_parent"
                android:layout_marginLeft="264px">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48px"
                    android:text="·限购商城消费套餐"
                    android:textColor="#fbfbfb"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_money_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desc"
                    android:layout_marginTop="26px"
                    android:text="·原价"
                    android:textColor="#fbfbfb"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_money_desc"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="20px"
                    android:text="有效期:"
                    android:textColor="#ffffff"
                    android:textSize="24px" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76px"
            android:layout_below="@+id/rl_bg"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_use"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="立即使用"
                android:textColor="#333333"
                android:textSize="32px" />


            <TextView
                android:id="@+id/tv_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="赠送他人"
                android:textColor="#2b9ced"
                android:textSize="32px" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>