<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_son2"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginBottom="1px"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        android:background="@color/white"
        app:layout_auto_basewidth="height" >

        <View
            android:id="@+id/view_01"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0"
            android:visibility="gone"/>
        <View
            android:id="@+id/view"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="#e0e0e0"/>

        <ImageView
            android:id="@+id/iv_son_icon2"
            android:layout_width="101px"
            android:layout_height="101px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tv_son_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23px"
            android:layout_toRightOf="@+id/iv_son_icon2"
            android:layout_toLeftOf="@+id/iv_right_02"
            android:layout_marginRight="23px"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="27px" />

        <ImageView
            android:id="@+id/iv_right_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/ic_forward01" />
    </RelativeLayout>
</RelativeLayout>