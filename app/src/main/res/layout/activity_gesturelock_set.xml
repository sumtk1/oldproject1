<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_gray">

    <include
        android:id="@+id/in_titlebar"
        layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="绘制解锁图案"
            android:textSize="30px"
            android:textColor="#333333"/>

        <com.gloiot.hygo.ui.activity.gesturelock.SetGestureLockView
            android:id="@+id/id_gestureLockView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            zhy:count="3" />
        <!--   zhy:color_no_finger_inner_circle="#ff085D58"
                zhy:color_no_finger_outer_circle="#ff08F0E0"
                zhy:color_finger_on="#FF1734BF" -->
    </LinearLayout>

</RelativeLayout>